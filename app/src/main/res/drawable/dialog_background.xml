<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng mờ cho dialog -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A53DC"/> <!-- Màu của bóng mờ (nửa trong suốt) -->
            <corners android:radius="36dp"/> <!-- Bo góc bóng -->
        </shape>
    </item>
    <!-- Nền chính của dialog -->
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu nền của dialog -->
            <corners android:radius="36dp"/> <!-- Bo góc nền chính -->
        </shape>
    </item>
</layer-list>
