<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D2B48C"
            android:endColor="#8B4513"
            android:angle="45"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="#6A4E23"/> <!-- Màu nâu tối -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D8B29D"
            android:endColor="#F2E1C1"
            android:angle="45"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="#A8764D"/> <!-- Màu nâu đậm hơn -->
        </shape>
    </item>
</selector>
